<!--
    This is to include the header
-->
<%- include('partials/header') %>
<div class="box" id="heading">
    <%
        var listName = "";
        if(listTitle === ""){ 
            listName = "Today";
    %>
            <h1>Today</h1>
    <%
        }
        else{
            listName = listTitle;
    %>
            <h1><%= listTitle %></h1>
    <%
        }
    %>
</div>
<div class="box">
    <form method="POST" action="/delete">
        <% 
            lists.forEach(function(list){
        %>
            
                <div class="item">
                        <input type="checkbox" name="<%= listName %>" value="<%= list._id %>"  onChange="this.form.submit()">
                        <p><%= list.name %></p>
                </div>
        <%
            });
        %>
    </form>
    <form class="item" method="POST", action="/<%= listTitle %>">
        <input type="text" name="item" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>
<!--
    This is to include the footer
-->
<%- include('partials/footer') %>